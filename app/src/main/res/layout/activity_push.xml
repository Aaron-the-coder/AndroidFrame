<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.goldencarp.lingqianbao.view.activity.PushActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="极光推送演示"
        android:layout_gravity="center_horizontal"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:layout_margin="10dp"/>
    <Button
        android:id="@+id/btn_stop_push"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="stopPush"
        android:text="停止推送" />

    <Button
        android:id="@+id/btn_resume_push"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="resumePush"
        android:text="恢复推送" />
    <Button
        android:id="@+id/btn_set_alias"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="setAlias"
        android:text="设置别名" />
    <Button
        android:id="@+id/btn_delete_alias"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="deleteAlias"
        android:text="删除别名" />
    <Button
        android:id="@+id/btn_get_alias"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="getAlias"
        android:text="获取别名" />
</LinearLayout>
