<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.ConstraintLayoutActivity"
    android:background="#F4F4F4">

    <TextView
        android:id="@+id/tv_acl_account_security"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="账户安全"
        android:textSize="@dimen/dimens_15_sp"
        android:textColor="#616161"
        android:padding="@dimen/dimens_15_dp"/>
    <TextView
        android:id="@+id/tv_acl_reset_deal_pwd"
        android:text="重置交易密码"
        app:layout_constraintTop_toBottomOf="@id/tv_acl_account_security"
        style="@style/item_security_setting_content"/>
    <TextView
        android:id="@+id/tv_acl_modify_login_pwd"
        android:text="修改登录密码"
        app:layout_constraintTop_toBottomOf="@id/tv_acl_reset_deal_pwd"
        android:layout_marginTop="1dp"
        style="@style/item_security_setting_content"/>

    <TextView
        android:id="@+id/tv_acl_function_toggle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="功能开启"
        android:textSize="@dimen/dimens_15_sp"
        android:textColor="#616161"
        android:padding="@dimen/dimens_15_dp"
        app:layout_constraintTop_toBottomOf="@id/tv_acl_modify_login_pwd"/>

    <TextView
        android:id="@+id/tv_acl_guesture_pwd"
        android:text="手势密码"
        app:layout_constraintTop_toBottomOf="@id/tv_acl_function_toggle"
        style="@style/item_security_setting_content"/>
    <TextView
        android:id="@+id/tv_acl_msg_push"
        android:text="消息推送"
        app:layout_constraintTop_toBottomOf="@id/tv_acl_guesture_pwd"
        android:layout_marginTop="1dp"
        style="@style/item_security_setting_content"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="安全退出"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/tv_acl_msg_push"
        android:background="#BFA26D"
        android:gravity="center"
        android:padding="15dp"
        android:layout_marginLeft="@dimen/dimens_20_dp"
        android:layout_marginRight="@dimen/dimens_20_dp"
        android:layout_marginTop="@dimen/dimens_60_dp"/>
</android.support.constraint.ConstraintLayout>